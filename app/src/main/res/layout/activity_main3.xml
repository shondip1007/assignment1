<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_margin="20dp"

    tools:context=".MainActivity3">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="100dp"
        app:cardCornerRadius="24dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:padding="10dp">

            <Button
                android:id="@+id/btntext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"


                android:elevation="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:text="SetText" />
            <Button
                android:id="@+id/btnFormRegex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:background="@drawable/btn_plan"
                android:elevation="100dp"
                android:layout_marginBottom="10dp"
                android:textAllCaps="true"
                android:text="Form and Regex" />
            <Button
                android:id="@+id/btnSeekbarRatingBarSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="100dp"
                android:textAllCaps="true"
                android:layout_marginBottom="15dp"
                android:textColor="@color/white"


                android:textSize="20sp"
                android:text="Seek Switch Ratting" />

            <Button
                android:id="@+id/btnCheckRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:background="@drawable/btn_plan"
                android:layout_marginBottom="10dp"

                android:elevation="100dp"
                android:textAllCaps="true"
                android:text="CeckBox and Radio" />

            <Button
                android:id="@+id/btnimage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="100dp"
                android:textAllCaps="true"
                android:layout_marginBottom="15dp"
                android:textColor="@color/white"

                android:textSize="20sp"
                android:text="Set Image" />

                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>